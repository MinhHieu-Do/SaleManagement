@model IQueryable<WebApp.SaleManagement.Models.Product>
@{
    ViewData["Title"] = "Products";

}
<div class="content container-fluid">

    <!-- Page Header -->
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3 class="page-title">List of Product</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="javascript:(0);">Product Management</a></li>
                    <li class="breadcrumb-item active">Product</li>
                </ul>
            </div>
            <div class="col-md-4">

            </div>
            <div class="col-sm-2">
                
                
                    <a type="button" asp-action="Create" class="btn btn-outline-primary"><i class="fe fe-notice-push"></i> Create</a>
                


            </div>
        </div>
    </div>
    <!-- /Page Header -->

    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <div class="table-responsive">
                            <table class="datatable table table-hover table-center mb-0">
                                <thead>
                                    <tr >
                                        <th>ID</th>
                                        <th>Product Name</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Category</th>
                                        <th>Brand</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="ListView">
                                    <partial name="_ListProduct" model="@Model" />
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Delete Modal -->
<div class="modal fade" id="delete_modal" aria-hidden="true" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <!--	<div class="modal-header">
                    <h5 class="modal-title">Delete</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>-->
            <div class="modal-body" id="DeleteView">

            </div>
        </div>
    </div>
</div>
<!-- /Delete Modal -->



@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}