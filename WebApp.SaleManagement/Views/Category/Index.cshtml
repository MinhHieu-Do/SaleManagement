@model IEnumerable<WebApp.SaleManagement.Models.Category>
@{
    ViewData["Title"] = "Categories";

}
<div class="content container-fluid">

    <!-- Page Header -->
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3 class="page-title">List of Category</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="javascript:(0);">Product Management</a></li>
                    <li class="breadcrumb-item active">Category</li>
                </ul>
            </div>
            <div class="col-md-4">
                
            </div>
            <div class="col-sm-2">
                <!-- Button trigger modal -->
                <form method="get" class="actions" asp-action="Create" >
                    <button type="submit" class="btn btn-outline-primary"><i class="fe fe-notice-push"></i> Create</button>
                </form>
               
                
            </div>
        </div>
    </div>
    <!-- /Page Header -->

    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <div class="table-responsive">
                            <table class="datatable table table-hover table-center mb-0">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>
                                            Category Name
                                        </th>
                                        <th>Description</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="ListView">
                                    <partial name="_ListCategory" model="@Model" />
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Delete Modal -->
<div class="modal fade" id="delete_modal" aria-hidden="true" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <!--	<div class="modal-header">
                    <h5 class="modal-title">Delete</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>-->
            <div class="modal-body" id="DeleteView">

            </div>
        </div>
    </div>
</div>
<!-- /Delete Modal -->



@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}