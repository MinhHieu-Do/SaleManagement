@model WebApp.SaleManagement.Models.Category

<div class="content container-fluid">

    <!-- Page Header -->
    <div class="page-header">
        <div class="row modal-header">

            <div class="col-md-11">
                <h3 class="page-title text-primary">Create Category</h3>
            </div>
            <a asp-action="Index" class="btn btn-outline-primary" type="button">Back to List</a>

        </div>
    </div>
    <!-- /Page Header -->

    <form asp-action="CreatePost" method="post">
        <div class="row">
            <div class="col-md-12">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label>Category Name:</label>
                    <input asp-for="CategoryName" type="text"  class="form-control">
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Category Description:</label>
                    <textarea asp-for="CategoryDesc" rows="3" cols="5" class="form-control" placeholder="Enter message"></textarea>
                    <span asp-validation-for="CategoryDesc" class="text-danger"></span>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Create</button>
        
    </form>

</div>
